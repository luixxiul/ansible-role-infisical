# Keys
# Required key for platform encryption/decryption ops
ENCRYPTION_KEY={{ infisical_backend_environment_variable_encryption_key }}

# JWT
# Required secrets to sign JWT tokens
JWT_SIGNUP_SECRET={{ infisical_backend_environment_variable_jwt_signup_secret }}
JWT_REFRESH_SECRET={{ infisical_backend_environment_variable_jwt_refresh_secret }}
JWT_AUTH_SECRET={{ infisical_backend_environment_variable_jwt_auth_secret }}
JWT_SERVICE_SECRET={{ infisical_backend_environment_variable_jwt_service_secret }}

# JWT lifetime
# Optional lifetimes for JWT tokens expressed in seconds or a string
# describing a time span (e.g. 60, "2 days", "10h", "7d")
JWT_AUTH_LIFETIME={{ infisical_backend_environment_variable_jwt_auth_lifetime }}
JWT_REFRESH_LIFETIME={{ infisical_backend_environment_variable_jwt_refresh_lifetime }}
JWT_SIGNUP_LIFETIME={{ infisical_backend_environment_variable_jwt_signup_lifetime }}

# MongoDB
# Backend will connect to the MongoDB instance at connection string MONGO_URL which can either be a ref
# to the MongoDB container instance or Mongo Cloud
# Required
MONGO_URL={{ infisical_backend_environment_variable_mongo_url }}

# Website URL
# Required
SITE_URL={{ infisical_backend_environment_variable_site_url }}

# Mail/SMTP
SMTP_HOST={{ infisical_backend_environment_variable_smtp_host }}
SMTP_PORT={{ infisical_backend_environment_variable_smtp_port }}
SMTP_NAME={{ infisical_backend_environment_variable_smtp_name }}
SMTP_USERNAME={{ infisical_backend_environment_variable_smtp_username }}
SMTP_PASSWORD={{ infisical_backend_environment_variable_smtp_password }}
SMTP_FROM_ADDRESS={{ infisical_backend_environment_variable_smtp_from_address }}
SMTP_FROM_NAME={{ infisical_backend_environment_variable_smtp_from_name }}
SMTP_SECURE={{ 'true' if infisical_backend_environment_variable_smtp_secure else 'false' }}

# Sentry (optional) for monitoring errors
SENTRY_DSN={{ infisical_backend_environment_variable_sentry_dsn }}

INVITE_ONLY_SIGNUP={{ 'true' if infisical_backend_environment_variable_invite_only_signup else 'false' }}

TELEMETRY_ENABLED={{ 'true' if infisical_backend_environment_variable_telemetry_enabled else 'false' }}

{{ infisical_backend_environment_variables_additional_variables }}
